<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/staticListItemBackgroundColor">

    <TextView
        android:id="@+id/staticItemTitleTextView"
        android:layout_toStartOf="@+id/staticListItemArrow"
        style="@style/StaticListItemTile" />

    <ImageView
        android:id="@+id/staticListItemArrow"
        android:src="@drawable/ic_static_list_arrow"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />

</RelativeLayout>